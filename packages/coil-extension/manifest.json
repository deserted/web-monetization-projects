{
  "name": "Coil",
  "description": "Support websites and creators with Web Monetization",
  "version": "0.0.52",
  "manifest_version": 2,
  "content_security_policy": "script-src 'self' 'sha256-wmgvAWJ6bKRgnsVdpRPut9JT5J23ZxEOGkBj48F69io='; object-src 'self'",
  "browser_specific_settings": {
    "gecko": {
      "id": "coilfirefoxextension@coil.com"
    }
  },
  "icons": {
    "128": "res/icn-coil-ext@4x.png"
  },
  "browser_action": {
    "default_icon": "res/icn-coil-ext@4x.png",
    "default_popup": "static/popup.html"
  },
  "background": {
    "page": "static/background.html"
  },
  "incognito" : "spanning",
  "declarative_net_request" : {
    "rule_resources": [{
      "id" : "gpc_header",
      "enabled": true,
      "path": "gpc.json"
    }]
  },
  "web_accessible_resources": [

  ],
  "content_scripts": [
    {
      "matches": ["https://*/*","http://*/*"],
      "js": ["content.js"],
      "match_about_blank": false,
      "all_frames": true,
      "run_at": "document_start"
    }
  ],
  "permissions": [ "webNavigation", "<all_urls>", "declarativeNetRequest" ]
}
